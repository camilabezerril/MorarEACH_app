<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastrologin.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="@drawable/bg_foto_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/email_login"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="40dp"
        android:alpha="0.9"
        android:background="@drawable/rounded_et"
        android:drawableStart="@drawable/icon_email_resize"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/senha_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_et"
        android:paddingLeft="15dp"
        android:alpha="0.9"
        android:ems="10"
        android:hint="senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_login"
        app:layout_constraintStart_toStartOf="@+id/email_login"
        app:layout_constraintTop_toBottomOf="@+id/email_login"
        android:drawableStart="@drawable/icon_senha_resize"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/login_anonimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/kozuka_bold"
        android:text="Login Anônimo"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/senha_login"
        app:layout_constraintStart_toStartOf="@+id/senha_login"
        app:layout_constraintTop_toBottomOf="@+id/senha_login" />

    <Button
        android:id="@+id/cadastrar_cadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:alpha="0.7"
        android:background="@drawable/rounded_et_black"
        app:backgroundTint="@null"
        android:text="Entrar"
        android:fontFamily="@font/kozuka_bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/senha_login"
        app:layout_constraintStart_toStartOf="@+id/senha_login"
        app:layout_constraintTop_toBottomOf="@+id/login_anonimo" />

    <TextView
        android:id="@+id/cadastrar_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kozuka_bold"
        android:text="Não possui cadastro?"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/cadastrar_cadastro"
        app:layout_constraintStart_toStartOf="@+id/cadastrar_cadastro"
        app:layout_constraintTop_toBottomOf="@+id/cadastrar_cadastro" />


</androidx.constraintlayout.widget.ConstraintLayout>

